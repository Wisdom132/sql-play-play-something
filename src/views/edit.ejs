<%-include("includes/head.ejs")%> < <!-- SECTION:CONTENT -->
    <div class="container" class="mt-4 ml-2 mr-2">
        <h4 class="text-center mt-4">EDIT Student</h4>
        <hr>
        <div class="row">
            <div class="col-sm-10 mx-auto">
                <form action="/edit" method="POST">
                    <input type="hidden" value="<%= student.id %>" name="studentId" />
                    <div class="form-group mt-4">
                        <input type="text" class="form-control" id="name" name="name" value="<%= student.name %>"
                            aria-describedby="emailHelp" />
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="imageUrl" name="imageUrl"
                            value="<%= student.imageUrl %>" aria-describedby="emailHelp" />
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" id="age" name="age" value="<%= student.age %>"
                            aria-describedby="emailHelp" />
                    </div>

                    <div class="text-center">
                        <button id="update" class="btn btn-outline-warning btn-lg" onclick="Update()" value="UPDATE">
                            UPDATE
                        </button>
                    </div>
            </div>
        </div>
    </div>

    <!--  -->
    <%-include("includes/footer.ejs")%>